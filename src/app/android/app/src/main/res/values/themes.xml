<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DeepSeat" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_accent</item>
        <item name="colorPrimaryVariant">@color/color_accent</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/bg_secondary</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Navigation bar color -->
        <item name="android:navigationBarColor">@color/bg_secondary</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/color_accent</item>
        <item name="titleTextColor">@color/color_accent</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

    <style name="Theme.DeepSeat.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/bg_primary</item>
        <item name="windowSplashScreenIconBackgroundColor">@color/black</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/avd_anim_deepseat</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.DeepSeat</item>
    </style>

</resources>