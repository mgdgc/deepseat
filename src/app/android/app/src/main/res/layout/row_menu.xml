<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_row_menu"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    tools:showIn="@layout/fragment_more">

    <androidx.cardview.widget.CardView
        android:id="@+id/layout_row_menu_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardBackgroundColor="@color/bg_tertiary"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_row_menu_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_margin="8dp"
            app:tint="@color/text_primary"
            tools:src="@drawable/ic_action_deepseat">

        </ImageView>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txt_row_menu_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textColor="@color/text_primary"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/layout_row_menu_icon"
        app:layout_constraintRight_toLeftOf="@+id/txt_row_menu_desc"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="title">

    </TextView>

    <ImageView
        android:id="@+id/img_row_menu_disclosure"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="8dp"
        android:alpha="0.6"
        android:src="@drawable/ic_disclosure"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/text_primary">

    </ImageView>

    <TextView
        android:id="@+id/txt_row_menu_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:textColor="@color/text_secondary"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/img_row_menu_disclosure"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Desc">

    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>
